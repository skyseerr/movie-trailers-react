$white = #fff
$black = #000
$blue = #1a191f
$blue2 = #222028
$orange = #f9ab00
$yellow = #FFC312
$red = #EB5757
$green = #29b474

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Source Sans Pro', sans-serif
	font-weight 400
	background-color $blue
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .4s
	cursor pointer
	transition-property color, background-color, border-color, opacity
	&:focus
		outline none
a
	transition .4s
	transition-property color, background-color, border-color, opacity
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .4s
	&:focus
		outline none

select::-ms-expand
	display none

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $orange
	color $white
	text-shadow none
::selection
	background $orange
	color $white
	text-shadow none

::-webkit-input-placeholder
	color rgba($white, .75)
	opacity 1
::-moz-placeholder
	color rgba($white, .75)
	opacity 1
:-moz-placeholder
	color rgba($white, .75)
	opacity 1
:-ms-input-placeholder
	color rgba($white, .75)
	opacity 1

.container
	@media (min-width: 1440px)
		max-width 1310px

.row
	&--grid
	&--form
		margin-left -10px
		margin-right -10px
		.col-12
		.col-6
			padding-left 10px
			padding-right 10px
	@media (min-width: 768px)
		&--grid
			margin-left -15px
			margin-right -15px
			.col-12
			.col-6
				padding-left 15px
				padding-right 15px

.owl-carousel .owl-item img
	width auto
	max-width 100%

.tab-content > .tab-pane
	display none

.tab-content > .active
	display block

.fade
	transition opacity 0.25s linear

@media screen and (prefers-reduced-motion: reduce)
	.fade
		transition none

.fade:not(.show)
	opacity 0

.body
	&:before
		content ''
		position fixed
		display block
		top 0
		left 0
		right 0
		bottom 0
		z-index 99
		background-color rgba($blue, .75)
		opacity 0
		pointer-events none
		transition .4s ease
	&--active
		&:before
			z-index 99
			opacity 1
			pointer-events auto

/*==============================
	Header
==============================*/
.header
	display block
	position fixed
	top 0
	left 0
	width 100%
	background-color $blue
	z-index 101
	border-bottom 1px solid $blue2
	&__logo
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 70px
		width 80px
		img
			width 100%
			display block
	&__nav
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position fixed
		top 70px
		right 0
		bottom 0
		background-color $blue
		z-index 99
		width 300px
		padding 30px 30px 0
		transform translate3d(300px, 0, 0)
		transition .4s ease
		border-top 2px solid $orange
		&--active
			transform translate3d(0, 0, 0)
	&__nav-link
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 14px
		text-transform uppercase
		color $white
		i
			font-size 8px
			margin-left 5px
		&:hover
			color $orange
		&--more
			i
				font-size 20px
		&--active
			color $orange
	&__nav-item
		width 100%
		display block
		margin-bottom 20px
		position relative
		&:last-child
			margin-bottom 0
		&.show
			.header__nav-link
				color $orange
	&__dropdown
		position relative
		display block
		width 100%
	&__dropdown-menu
		position absolute
		background-color $blue2
		padding 15px 20px
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		width 100%
		min-width 200px
		z-index -1
		pointer-events none
		opacity 0
		transition .4s ease
		margin-top 0
		top 100%
		border-radius 6px
		div
			width 100%
		li
			padding 0
			margin-bottom 15px
			width 100%
			&:last-child
				margin-bottom 0
		a
			font-size 16px
			color $white
			display block
			font-weight 400
			&:hover
				color $orange
		&.scrollbar-dropdown
			max-height 260px
		&.show
			z-index 1000
			pointer-events auto
			opacity 1
			margin-top 10px
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		height 70px
		position relative
	&__auth
		display flex
		flex-direction row
		justify-content flex-end
		align-items center
		margin-right 42px
	&__sign-in
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 40px
		width 40px
		border-radius 6px
		margin-left 20px
		border 2px solid $orange
		span
			display none
		i
			color $white
			font-size 22px
		&:hover
			background-color rgba($orange, .05)
			span
				color $white
	&__btn
		display block
		position absolute
		right 0
		top 50%
		margin-top -22px
		width 22px
		height 40px
		span
			display block
			position absolute
			height 2px
			width 22px
			background $black
			opacity 1
			left 0
			transform rotate(0deg)
			transition .4s ease
			top 13px
			background-color $white
			border-radius 2px
			&:nth-child(2)
				top 21px
			&:nth-child(3)
				top 29px
		&:hover
			span
				background-color $orange
		&--active
			span
				background-color $orange
			span:nth-child(1)
				top 21px
				transform rotate(45deg)
			span:nth-child(2)
				opacity 0
			span:nth-child(3)
				top 21px
				transform rotate(-45deg)
	&__lang
		position relative
		margin-left 20px
		.header__dropdown-menu
			min-width 122px
			margin-top -10px
			&.show
				margin-top 0
		.header__nav-link
			height 70px
		&.show
			.header__nav-link
				color $orange
	&__search-btn
		display flex
		justify-content center
		align-items center
		height 40px
		color $white
		font-size 22px
		&:hover
			color $orange
	&__search
		position absolute
		background-color $blue
		top -70px
		right -15px
		left -15px
		z-index 1
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		padding 0 15px
		pointer-events none
		transition top .4s
		&--active
			top 0
			pointer-events auto
	&__search-input
		width calc(100% - 35px)
		height 40px
		border-radius 6px
		background-color $blue2
		border 2px solid transparent
		font-size 16px
		color $white
		padding 0 50px 0 20px
		&:focus
			border-color $orange
	&__search-button
		position absolute
		height 40px
		color $white
		font-size 22px
		top 50%
		margin-top -20px
		right 75px
		&:hover
			color $orange
	&__search-close
		position absolute
		height 40px
		color $white
		font-size 22px
		top 50%
		margin-top -20px
		right 15px
		&:hover
			color $orange
	@media (min-width: 360px)
		&__logo
			width 110px
	@media (min-width: 576px)
		&__sign-in
		&__lang
			margin-left 30px
		&__auth
			margin-right 52px
		&__lang
			.header__dropdown-menu
				min-width 140px
	@media (min-width: 768px)
		&__content
			height 80px
		&__logo
			height 80px
			width 120px
		&__auth
			margin-right 52px
		&__sign-in
			height 40px
			width 120px
			margin-left 30px
			i
				display none
			span
				display block
				font-size 14px
				color $white
				text-transform uppercase
				transition color .4s
		&__nav
			top 80px
			width 260px
			transform translate3d(260px, 0, 0)
			&--active
				transform translate3d(0, 0, 0)
		&__lang
			.header__nav-link
				height 80px
	@media (min-width: 1200px)
		&__sign-in
			margin-left 30px
		&__auth
			margin-right 0
		&__btn
			display none
		&__nav
			transform translate3d(0, 0, 0)
			padding 0
			background-color transparent
			width auto
			flex-direction row
			align-items center
			position relative
			top auto
			right auto
			bottom auto
			margin-left auto
			box-shadow none
			border none
		&__nav-item
			margin 0 35px 0 0
			width auto
			&:last-child
				margin 0
		&__nav-link
			line-height 80px
			&--active
				color $orange
				cursor default
				position relative
				&:hover
					color $orange
		&__content
			justify-content flex-start
		&__auth
			margin-left auto
			justify-content space-between
			width 426px
		&__dropdown-menu
			margin-top -10px
			&.show
				margin-top 0
		&__lang
			margin-left 30px
			margin-right auto
		&__search-btn
			display none
		&__search-close
			display none
		&__search
			position relative
			opacity 1
			pointer-events auto
			padding 0
			top auto
			right auto
			left auto
			bottom auto
			background-color transparent
		&__search-input
			width 200px
		&__search-button
			right 20px
	@media (min-width: 1440px)
		&__auth
			width 494px
		&__nav-item
			margin 0 45px 0 0
			&:last-child
				margin 0
		&__search-input
			width 232px

/*==============================
	Home
==============================*/
.home
	margin-top 70px
	position relative
	display block
	background-color $blue
	padding 50px 0
	overflow hidden
	.container
		position relative
		z-index 2
	&__bg
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		z-index 1
	&__cover
		opacity .1
	&__title
		color $white
		text-transform uppercase
		font-weight 300
		font-size 32px
		line-height 42px
		margin 0
		padding-right 70px
		b
			font-weight 600
	&__carousel
		.card
			margin-top 25px
			margin-bottom 0
	&__nav
		font-size 36px
		color $white
		opacity .7
		position absolute
		top 50%
		height 24px
		margin-top -12px
		right 15px
		display flex
		flex-direction row
		justify-content center
		align-items center
		z-index 2
		transition .4s ease
		&--prev
			right 55px
		&:hover
			opacity 1
	&--bg
		&:before
			content ''
			z-index 1
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			display block
			background url('../img/home/home__bg.jpg') no-repeat center / cover
			opacity .1
	@media (min-width: 768px)
		margin-top 80px
		padding 70px 0
		&__title
			font-size 36px
		&__carousel
			.card
				margin-top 40px
	@media (min-width: 1200px)
		&__title
			font-size 40px

/*==============================
	Content
==============================*/
.content
	padding 0 0 30px
	&--profile
		padding-bottom 50px
	&__head
		background-color $blue
		margin-bottom 20px
		padding 20px 0
		position relative
		border-bottom 1px solid $blue2
	&__title
		color $white
		font-weight 400
		font-size 30px
		line-height 100%
		margin-bottom 20px
	&__tabs
		display none
	&__mobile-tabs
		position relative
	&__mobile-tabs-btn
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		cursor pointer
		height 20px
		input
			display block
			position relative
			width auto
			background-color transparent
			border none
			font-size 14px
			text-transform uppercase
			color $white
			cursor pointer
			height 20px
			margin-right 10px
		span
			position relative
			width 16px
			height 16px
			display block
			margin-top 1px
			&:before
			&:after
				content ''
				position absolute
				display block
				width 16px
				height 2px
				background-color $white
				border-radius 2px
				left 0
				top 50%
				transition .4s ease
				margin-top -5px
			&:after
				margin-top 2px
				width 10px
		&[aria-expanded="true"]
			span
				&:before
					background-color $orange
					transform rotate(45deg)
					margin-top -1px
				&:after
					background-color $orange
					margin-top -1px
					width 16px
					transform rotate(-45deg)
		&:hover
			span
				&:before
				&:after
					background-color $orange
	&__mobile-tabs-menu
		position absolute
		background-color $blue2
		top 100%
		left 0
		margin-top 0
		min-width 200px
		padding 20px
		display block
		transition .4s ease
		z-index 100
		pointer-events none
		opacity 0
		max-height 200px
		border-radius 6px
		li
			display block
			font-size 14px
			color $white
			position relative
			text-transform uppercase
			cursor pointer
			transition .4s ease
			margin-bottom 15px
			&:last-child
				margin-bottom 0
			&:hover
				color $orange
		a
			color $white
			&:hover
				color $orange
		&.show
			pointer-events auto
			opacity 1
			margin-top 10px
	@media (min-width: 768px)
		padding 0 0 40px
		&--profile
			padding-bottom 70px
		&__title
			font-size 34px
			margin-bottom 10px
		&__head
			margin-bottom 30px
			padding 30px 0 0
		&__tabs
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			overflow hidden
			li
				margin-right 40px
				&:last-child
					margin-right 0
			a
				display flex
				flex-direction row
				justify-content flex-start
				align-items center
				height 54px
				color $white
				position relative
				text-transform uppercase
				font-size 14px
				&:hover
					color $orange
				&:before
					content ''
					position absolute
					bottom 0
					left 0
					right 0
					height 2px
					display block
					background-color $orange
					transition .4s ease
					transform translateY(2px)
					opacity 0
					border-radius 2px 2px 0 0
				&.active
					color $orange
					&:before
						opacity 1
						transform translateY(0)
			&--profile
				a
					height 80px
		&__mobile-tabs
			display none
	@media (min-width: 1200px)
		&__title
			font-size 36px
		&__tabs
			li
				margin-right 35px
				&:last-child
					margin-right 0
	@media (min-width: 1440px)
		&__tabs
			li
				margin-right 40px
				&:last-child
					margin-right 0

