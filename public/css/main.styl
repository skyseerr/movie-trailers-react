	display flex
	flex-direction row
	justify-content flex-start
	align-items center
	margin-top 10px
	&__item
		font-size 16px
		color $white
		transition .4s ease
		position relative
		margin-right 36px
		&:before
			content '\f119'
			position absolute
			font-family "Ionicons"
			color rgba($white, .7)
			left 100%
			top 0
			font-size 20px
			line-height 26px
			margin-left 12px
		&:hover
			color $white
		&--active
			cursor default
			margin-right 0
			&:before
				display none
			&:hover
				color $white
	a
		color rgba($white, .7)
		&:hover
			color $orange
	@media (min-width: 768px)
		margin-top 0

/*==============================
	Card
==============================*/
.card
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	width 100%
	position relative
	margin-bottom 20px
	&__cover
		display flex
		flex-direction row
		justify-content center
		align-items center
		position relative
		border-radius 6px
		overflow hidden
		background-color $blue2
		img
			width 100%
			transition opacity .5s
		&:hover
			img
				opacity .4
			.card__play
				opacity 1
				transform scale(1)
	&__play
		position absolute
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 60px
		height 60px
		background-color rgba($white, .2)
		border-radius 50%
		top 50%
		left 50%
		margin -30px 0 0 -30px
		z-index 3
		font-size 30px
		color $orange
		transition .5s
		transform scale(.9)
		transition-property opacity, background-color, color, border-color, transform
		opacity 0
		border 6px solid rgba($white, .15)
		i
			position relative
			display flex
			flex-direction row
			justify-content center
			align-items center
			width 100%
			height 100%
			border-radius 50%
			background-color $white
			padding 1px 0 0 4px
		&:hover
			border-color rgba($orange, .5)
			color $orange
	&__content
		position relative
		display block
		margin-top 10px
		width 100%
