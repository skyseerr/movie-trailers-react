$white = #fff
$black = #000
$blue = #1a191f
$blue2 = #222028
$orange = #f9ab00
$red = #EB5757
$green = #29b474
$yellow = #FFC312

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Source Sans Pro', sans-serif
	font-weight 400
	background-color $blue
	font-weight normal
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .4s
	cursor pointer
	transition-property color, background-color, border-color, opacity
	&:focus
		outline none
a
	transition .4s
	transition-property color, background-color, border-color, opacity
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .4s
	&:focus
		outline none

select::-ms-expand
	display none

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $orange
	color $white
	text-shadow none
::selection
	background $orange
	color $white
	text-shadow none

::-webkit-input-placeholder
	color rgba($white, .75)
	opacity 1
::-moz-placeholder
	color rgba($white, .75)
	opacity 1
:-moz-placeholder
	color rgba($white, .75)
	opacity 1
:-ms-input-placeholder
	color rgba($white, .75)
	opacity 1

.row
	&--grid
	&--form
		margin-left -10px
		margin-right -10px
		.col-12
		.col-6
			padding-left 10px
			padding-right 10px
	@media (min-width: 768px)
		&--grid
			margin-left -15px
			margin-right -15px
			.col-12
			.col-6
				padding-left 15px
				padding-right 15px

.tab-content
	width 100%

.tab-content > .tab-pane
	display none

.tab-content > .active
	display block

.fade
	transition opacity 0.25s linear

@media screen and (prefers-reduced-motion: reduce)
	.fade
		transition none

.fade:not(.show)
	opacity 0

.collapse:not(.show)
	display none

.collapsing
	position relative
	height 0
	overflow hidden
	transition height .4s ease

@media screen and (prefers-reduced-motion: reduce)
	.collapsing
		transition none

/*==============================
	Header
==============================*/
.header
	display block
	position fixed
	top 0
	left 0
	width 100%
	background-color $blue
	z-index 100
	border-bottom 1px solid $blue2
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		height 70px
		position relative
		padding 0 15px
		width 100%
	&__logo
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		background-color $blue
		width auto
		img
			width 110px
			display block
	&__btn
		display block
		width 22px
		height 20px
		position relative
		span
			display block
			position absolute
			height 2px
			width 22px
			background $black
			opacity 1
			left 0
			transform rotate(0deg)
			transition .4s ease
			top 0px
			background-color $white
			border-radius 2px
			&:nth-child(2)
				top 8px
			&:nth-child(3)
				top 16px
		&:hover
			span
				background-color $orange
		&--active
			span
				background-color $orange
			span:nth-child(1)
				top 8px
				transform rotate(45deg)
			span:nth-child(2)
				opacity 0
			span:nth-child(3)
				top 8px
				transform rotate(-45deg)
	@media (min-width: 768px)
		&__logo
			img
				width 120px
	@media (min-width: 1200px)
		display none

/*==============================
	Sidebar
==============================*/
.sidebar
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	background-color $blue
	position fixed
	top 0
	left 0
	bottom 0
	z-index 101
	width 280px
	transform translateX(-100%)
	transition transform .4s ease
	border-right 1px solid $blue2
	&__logo
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		padding 0 30px
		background-color $blue
		width 100%
		position relative
		border-bottom 1px solid $blue2
		img
			width 120px
			display block
	&__user
		padding 20px 30px
		width 100%
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		border-bottom 1px solid $blue2
	&__user-img
		width 40px
		height 40px
		border-radius 6px
		overflow hidden
		display block
		margin-right 15px
		img
			width 100%
	&__user-title
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		p
			color $white
			display block
			font-size 16px
			font-weight 600
			margin-bottom 0
		span
			display block
			color rgba($white, .7)
			font-size 10px
	&__user-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 40px
		width 40px
		border-radius 6px
		background-color transparent
		color $white
		text-transform uppercase
		margin-left auto
		border 2px solid $orange
		i
			font-size 22px
		&:hover
			color $white
			background-color rgba($orange, .05)
	&__nav-wrap
		display block
		width 100%
		height calc(100vh - 240px)
		overflow hidden
	&__nav
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position relative
		padding 30px 0
		width 100%
		height 100%
	&__nav-link
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 14px
		text-transform uppercase
		color $white
		padding 0 30px
		position relative
		span
			margin-left 30px
		i
			font-size 18px
			position absolute
			left 30px
			&:last-child
				margin-left 6px
				font-size 12px
				position relative
				left auto
		&:hover
			color $orange
		&--active
		&[aria-expanded="true"]
			color $orange
		&--active
			cursor default
	&__nav-item
		width 100%
		display block
		margin-bottom 20px
		position relative
		&:last-child
			margin-bottom 0
	&__menu
		padding 0
		display block
		width 100%
		text-align left
		margin-top 15px
		overflow hidden
		background-color $blue2
		li
			padding 0 0 0 49px
			margin-bottom 15px
			position relative
			&:before
				content ''
				position absolute
				display block
				width 4px
				height 4px
				border-radius 50%
				background-color $orange
				top 50%
				left 30px
				margin-top -2px
			&:last-child
				margin-bottom 20px
			&:first-child
				margin-top 20px
		a
			font-size 16px
			color $white
			display block
			font-weight 400
			&:hover
				color $orange
			&.active
				color $orange
				cursor default
	&__copyright
		margin-top auto
		padding 0 30px 20px
		color rgba($white, .6)
		font-size 12px
		letter-spacing .4px
		width 100%
		a
			color $orange
			&:hover
				color $orange
				text-decoration underline
	&--active
		transform translateX(0)
	@media (min-width: 768px)
		&__logo
			img
				width 120px
	@media (min-width: 1200px)
		transform translateX(0)
		&__logo
			height 80px

/*==============================
	Main
==============================*/
.main
	position relative
	margin-top 70px
	padding 20px 0 10px
	&__title
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		flex-wrap wrap
		margin-bottom 20px
