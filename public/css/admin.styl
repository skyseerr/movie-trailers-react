			width 100%
			min-width 500px
			thead
				border-bottom 1px solid $blue
				th
					padding 0 10px 15px 0
			tbody
				tr
					border-bottom none
					background-color transparent
				td
					padding 0
					.main__table-text
						background-color transparent
						padding 10px 15px 0 0
	&__table-text
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 16px
		color $white
		font-weight 400
		line-height 30px
		padding 15px
		background-color $blue2
		white-space nowrap
		a
			color $white
			&:hover
				color $orange
		i
			font-size 14px
			margin-right 6px
			color $orange
			line-height 24px
			margin-top 1px
		&--rate
			font-weight 600
			font-size 16px
			i
				font-weight normal
		&--red
			color $red
		&--green
			color $green
		&--grey
			color rgba($white, .7)
	&__table-btns
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		padding 15px
		background-color $blue2
	&__table-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 30px
		height 30px
		font-size 18px
		color $white
		border-radius 6px
		background-color rgba($white, .05)
		margin-right 10px
		&:last-child
			margin-right 0
		&--delete
			background-color rgba($red, .08)
			color $red
			&:hover
				color $red
				background-color rgba($red, .2)
		&--edit
			background-color rgba(#2f80ed, .08)
			color #2f80ed
			&:hover
				color #2f80ed
				background-color rgba(#2f80ed, .2)
		&--banned
			background-color rgba($green, .08)
			color $green
			&:hover
				color $green
				background-color rgba($green, .2)
		&--view
			background-color rgba($yellow, .08)
			color $yellow
			&:hover
				color rgba($yellow, .8)
				background-color rgba($yellow, .2)
	&__user
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		background-color $blue2
		padding 0 15px
		height 60px
	&__meta
		display flex
		flex-direction column
		justify-content center
		align-items flex-start
		height 40px
		h3
			color $white
			display block
			font-size 16px
			font-weight 600
			margin-bottom 0
			line-height 20px
		span
			color rgba($white, .7)
			font-size 14px
			line-height 20px
	&__avatar
		display block
		position relative
		width 40px
		overflow hidden
		border-radius 6px
		margin-right 15px
		border 1px solid rgba($white, .1)
		img
			width 100%
	@media (min-width: 576px)
		&__title-wrap
			flex-direction row
			justify-content space-between
			align-items center
		&__title-form
			margin-top 0
			width 260px
	@media (min-width: 768px)
		padding 30px 0 20px
		&__title-stat
			margin-top 10px
		&__title-wrap
			width auto
			margin-top 0
		&__title
			margin-bottom 30px
			padding-bottom 30px
	@media (min-width: 1200px)
		padding 0 15px 30px 295px
		margin-top 0
		&__title
			padding-bottom 0
			height 80px

/*==============================
	Stats
==============================*/
.stats
	display flex
	flex-direction column
	justify-content center
	align-items flex-start
	background-color $blue2
	padding 20px
	height 110px
	width 100%
	margin-bottom 20px
	position relative
	border-radius 6px
	i
		font-size 42px
		position absolute
		bottom 5px
		right 20px
		color $orange
	span
		font-size 14px
		color rgba($white, .7)
		font-weight 400
		display block
		margin-bottom 10px
	p
		margin 0
		font-size 36px
		font-weight 400
		color $white
		line-height 100%
	@media (min-width: 768px)
		margin-bottom 30px

/*==============================
	Dashbox
==============================*/
.dashbox
	background-color $blue2
	margin-bottom 20px
	border-radius 6px
	overflow hidden
	&__title
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		padding 20px
		border-bottom 1px solid $blue
		h3
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			color $white
			font-weight 400
			font-size 18px
			line-height 26px
			margin-bottom 0
			i
				font-size 18px
				margin-right 10px
				color $yellow
				line-height 26px
	&__wrap
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
	&__more
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 60px
		height 26px
		background-color $blue
		font-size 12px
		margin-left 15px
		color $white
		border-radius 6px
		&:hover
			color $yellow
	&__refresh
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 26px
		height 26px
		color $white
		font-size 16px
		&:hover
			color $yellow
	&__table-wrap
		position relative
		display block
		width 100%
		padding 20px
	@media (min-width: 768px)
		margin-bottom 30px

/*==============================
	Filter
==============================*/
.filter
	position relative
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	&__item-label
		font-size 12px
		display block
		color rgba($white, .7)
		font-weight 400
		line-height 10px
	&__item-btn
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		cursor pointer
		height 30px
		transition .4s ease
		input
			display block
			position relative
			width auto
			background-color transparent
			border none
			font-size 16px
			color $white
			cursor pointer
			height 30px
			margin-right 10px
		span
			position relative
			width 16px
			height 16px
			display block
			margin-top 3px
			&:before
			&:after
				content ''
				position absolute
				display block
				width 16px
				height 2px
				background-color $white
				left 0
				top 50%
				transition .4s ease
				margin-top -5px
				border-radius 2px
			&:after
				margin-top 2px
				width 10px
		&[aria-expanded="true"]
			span
				&:before
					transform rotate(45deg)
					margin-top -2px
					background-color $orange
				&:after
					margin-top -2px
					width 16px
					transform rotate(-45deg)
					background-color $orange
		&:hover
			span
				&:before
				&:after
					background-color $orange
	&__item-menu
		top 100%
		left 0
		margin-top 0
		min-width 200px
		padding 20px
		background-color $blue2
		display block
		transition .4s ease
		position absolute
		z-index 100
		pointer-events none
		opacity 0
		border-radius 6px
		li
			display block
			font-size 14px
			color $white
			position relative
			cursor pointer
			transition .4s ease
			margin-bottom 15px
			&:last-child
				margin-bottom 0
			&:hover
				color $orange
		&.show
			pointer-events auto
			opacity 1
			margin-top 10px
	@media (min-width: 768px)
		margin-right 50px
	@media (min-width: 1200px)
		margin-right 60px

/*==============================
	Paginator
==============================*/
.paginator-wrap
	display flex
	flex-direction row
	justify-content center
	align-items center
	width 100%
	margin 40px 0 30px
	span
		display none
		flex-direction row
		justify-content center
		align-items center
		background-color $blue2
		border-radius 6px
		height 40px
		padding 0 15px
		font-size 14px
		color rgba($white, .7)
	@media (min-width: 576px)
		justify-content space-between
		span
			display flex
	@media (min-width: 768px)
		margin 50px 0 30px

.paginator
	display flex
	flex-direction row
	justify-content center
	align-items center
	background-color $blue2
	height 40px
	width 240px
	border-radius 6px
	&__item
		margin 0
		a
			font-size 14px
			height 40px
			width 40px
			display flex
			flex-direction row
			justify-content center
			align-items center
			color rgba($white, .7)
			border-radius 6px
			border 2px solid transparent
		&:hover
			a
				color $orange
		&--prev
		&--next
			position relative
			height 40px
			transition .4s ease
			a
				font-size 16px
		&--active
			a
				color $white
				cursor default
				border-color $orange
				&:hover
					color $white

