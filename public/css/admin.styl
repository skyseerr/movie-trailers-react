			z-index 1
			top 0
			right 20px
			height 40px
			display flex
			flex-direction row
			justify-content center
			align-items center
			font-size 22px
			color $white
			i
				margin-top 2px
			&:hover
				color $orange
	&__title-link
		display flex
		justify-content center
		align-items center
		height 40px
		width 120px
		border-radius 6px
		border 2px solid $orange
		margin-left auto
		font-size 14px
		color $white
		text-transform uppercase
		&:hover
			color $white
			background-color rgba($orange, .05)
	&__table-wrap
		position relative
		width 100%
		overflow hidden
	&__table
		width 100%
		min-width 1050px
		border-spacing 0
		thead
			border-bottom 20px solid $blue
			th
				font-size 12px
				color rgba($white, .7)
				font-weight 400
				padding 0 15px 0 15px
				line-height 100%
				margin-bottom 0
				border none
		tbody
			tr
				border-bottom 10px solid $blue
			td
				padding 0
				background-color transparent
				border 0px solid transparent
